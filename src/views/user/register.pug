extends ../layout

block content
  h1 Register Page
  .col-md-6
    form(method='post' action='/register')
      .form-group
        label(for='username') Username
        input#username.form-control(type='text', placeholder='Username', name='username')
      .form-group
        label(for='password') Password
        input#password.form-control(type='password', placeholder='Password', name='password')
      .form-group
        label(for='passwordRepeat') Enter password again
        input#passwordRepeat.form-control(type='password', placeholder='Password', name='passwordRepeat')
      button.btn.btn-default(type='submit') Create Account
